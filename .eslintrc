{
    "parser": "babel-eslint",
    "extends": ["airbnb"],
    "env": {
      "browser": true,
      "es6": true,
      'commonjs': true
    },
    "plugins": [
      "import",
      "react",
    ],
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module",
      "ecmaFeatures": {
          "experimentalObjectRestSpread": true,
          "jsx": true
      }
    },
    "rules": {
      "indent": ["error", 2],
      "quotes": ["error", "single"],
      "react/require-extension": 0,
      "import/no-extraneous-dependencies" : 0,
      "import/no-unresolved": 0
    }
}
